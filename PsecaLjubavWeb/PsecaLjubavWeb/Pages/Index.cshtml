@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}
<div class="jumbotron d-flex align-items-center align-top align-self-md-center h-75">
    <div class="container text-center">
        <div class="row text-center">
            <div class="col-md-6 mx-auto">
                <label for="username-input">Username</label>
                <input type="text" class="form-control" id="username-input" aria-describedby="username-help" placeholder="Enter username">
                <small id="username-help" class="form-text text-muted">Username must be at least 6 characters long.</small>
            </div>
        </div>
        <div class="row text-center">
            <div class="col-md-6 mx-auto">
                <label for="password-input">Password</label>
                <input type="password" class="form-control" id="password-input" aria-describedby="password-help" placeholder="Enter password">
                <small id="password-help" class="form-text text-muted">Password must be at least 6 characters long.</small>
            </div>
        </div>
        <div class="row spacer"></div>
        <div class="row text-center">
            <div class="mx-auto">
                <button type="button" class="btn btn-primary btn-lg mr-md-5">Login</button>
                <button type="button" class="btn btn-primary btn-lg ml-md-5">Register</button>
            </div>
        </div>

        </div>
</div>

