<div class="row user-pages-links-row text-center bkg-light-1">
    <div class="col-md-4">
        <form method="get" asp-page="/User/Home">
            <button type="submit" class="btn user-page-link btn-lg mr-md-5">Kuća!</button>
        </form>
    </div>
    <div class="col-md-4">
        <form method="get" asp-page="/User/Adopt">
            <button type="submit" class="btn user-page-link btn-lg mr-md-5">Udomi!</button>
        </form>
    </div>
    <div class="col-md-4">
        <form method="post" asp-page-handler="Logout">
            <button type="submit" class="btn user-page-link btn-lg mr-md-5">Logout</button>
        </form>
    </div>
</div>